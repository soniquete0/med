{
  "name": "@nevim42/components",
  "version": "0.1.0",
  "description": "Components LIB for Example Project",
  "main": "lib/index.js",
  "module": "lib/index.js",
  "typings": "lib/@types",
  "repository": "git@bitbucket.org:foxmedia/components.git",
  "author": "Filip Suchy <nevim42@gmail.com>",
  "license": "MIT",
  "scripts": {  
    "babel": "babel build --out-dir lib",
    "build": "yarn compile && yarn babel && yarn resolveDefs",
    "clean": "rm -rf ./lib",
    "cleanOnlyTypes": "rm -rf ./lib/@types",
    "compile": "tsc --build tsconfig.build.json",
    "rebuild": "yarn cleanOnlyTypes && yarn build && yarn copyFormJson",
    "resolveDefs": "node scripts/resolveDefinitions.js ",
    "test": "jest",
    "up": "yarn install --check-files",
    "hot": "yarn up && node scripts/hotReload.js",
    "copyFormJson": "node scripts/copyFormJson.js"
  },
  "peerDependencies": {
    "react": "^16.3.2",
    "react-dom": "^16.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.2.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.0.0",
    "@types/google-map-react": "^0.23.10",
    "@types/jest": "^23.3.10",
    "@types/lodash": "^4.14.119",
    "@types/node": "^10.12.12",
    "@types/prop-types": "^15.5.6",
    "@types/react": "*",
    "@types/react-dom": "16.0.11",
    "@types/react-router-dom": "^4.3.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "jest": "^23.5.0",
    "node-sass": "^4.10.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.6.0"
  },
  "dependencies": {
    "@types/react-router": "^4.4.0",
    "@types/zen-observable": "^0.8.0",
    "apollo-boost": "^0.1.22",
    "apollo-client": "^2.4.7",
    "bootstrap": "^4.1.3",
    "google-map-react": "^1.1.1",
    "graphql": "14.0.2",
    "graphql-tag": "^2.9.2",
    "lodash": "^4.17.4",
    "moment": "^2.22.2",
    "obj-traverse": "^1.0.0",
    "react-adopt": "^0.6.0",
    "react-apollo": "^2.3.3",
    "react-geocode": "^0.1.2",
    "react-geolocated": "^2.4.0",
    "react-lines-ellipsis": "^0.13.2",
    "react-markdown": "^4.0.4",
    "react-masonry-css": "^1.0.11",
    "react-router-dom": "^4.3.1",
    "react-swipeable": "^4.3.0",
    "typescript": "^3.2.2",
    "webfontloader": "^1.6.28"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "tests\\/.*(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.test.json"
      }
    },
    "moduleNameMapper": {
      "@source/(.*)": "<rootDir>/src/$1"
    }
  }
}
